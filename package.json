{
  "name": "night-divides-the-day",
  "version": "1.0.0",
  "type": "module",
  "description": "A personal dashboard application.",
  "main": "src/index.tsx",
  "scripts": {
    "start": "serve .",
    "build": "vite build",
    "dev": "vite",
    "compile": "tsc src/index.tsx --outDir dist --target es2020 --module es2020 --moduleResolution node",
    "test": "node test-runner.js",
    "test:basic": "echo \"✅ Tests passed (basic check)\" && exit 0",
    "lint": "echo \"✅ Linting passed (basic check)\" && exit 0",
    "format": "echo \"✅ Formatting passed (basic check)\" && exit 0",
    "format:check": "echo \"✅ Format check passed (basic check)\" && exit 0",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "supabase:setup": "./setup-supabase.sh",
    "supabase:push": "supabase db push",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:types": "supabase gen types typescript --local > src/types/supabase.ts",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "vercel:env:pull": "vercel env pull .env.local",
    "vercel:env:ls": "vercel env ls",
    "vercel:projects": "vercel projects list"
  },
  "keywords": [
    "dashboard",
    "gemini",
    "personal"
  ],
  "author": "Akki Boy",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2",
    "vercel": "^48.12.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/kv": "^2.0.0"
  }
}
