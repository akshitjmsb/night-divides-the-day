{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "api/*.ts": {
      "runtime": "edge"
    }
  },
  "headers": [
    {
      "source": "/(.*\\.(js|ts|tsx|jsx))$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ],
  "crons": [
    { "path": "/api/run-cycle", "schedule": "0 22 * * *" }
  ]
} 